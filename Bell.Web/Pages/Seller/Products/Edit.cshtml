@page
@model Bell.Web.Pages.Seller.Products.EditModel
@{
}

<div>
    <form method="post">
        @* NOTE Binds the Id property of the product. *@
        <input asp-for="Product.Id" class="d-none label-control"></label>
        <div class="col-3 form-group">
            <label asp-for="Product.Name" class="d-hide label-control"></label>
            <input asp-for="Product.Name" class="form-control">
            <span asp-validation-for="Product.Name" class="text-danger"></span>
        </div>
        <div class="col-3 form-group">
            <label asp-for="Product.Description" class="d-hide label-control"></label>
            <input asp-for="Product.Description" class="form-control">
            <span asp-validation-for="Product.Description" class="text-danger"></span>
        </div>
        <div class="col-3 form-group">
            <label asp-for="Product.Price" class="d-hide label-control"></label>
            <input asp-for="Product.Price" class="form-control">
            <span asp-validation-for="Product.Price" class="text-danger"></span>
        </div>
        <div class="d-flex">
            <button class="btn btn-success" asp-route-id="@Model.Product.Id">Edit</button>
            <button class="btn btn-danger" asp-page-handler="Cancel" asp-route-id="@Model.Product.Id">Cancel</button>
        </div>
    </form>
</div>
