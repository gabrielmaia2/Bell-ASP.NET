@page
@model Bell.Web.Pages.Seller.Products.IndexModel
@{
}

<form method="post" class="container m-3">
    <div class="row">
        <div class="col-5 offset-3">
            <label asp-for="Search" class="form-label d-hide">Search Products</label>
            <input asp-for="Search" class="form-control col search-bar" placeholder="Search..." />
        </div>
        <div class="col-1">
            <input type="submit" value="Search" class="btn btn-primary w-100 search-bar" />
        </div>
    </div>
</form>

<h1 class="text-center">Your products</h1>

<form method="post" class="row g-0 row-cols-5">
    @foreach (var item in Model.Products)
    {
        <div class="col d-flex flex-column">
            @if (item != null)
            {
                <button asp-page-handler="View" asp-route-id=@item.Id
            class="btn p-3 m-2 rounded-4 product-preview d-flex flex-column align-items-start">
                    <div class="fs-5">
                        @item.Name
                    </div>
                    <div class="text-monetary fs-5">@($"{item.Price:C2}")</div>
                    <div class="text-break overflow-hidden description">@item.Description</div>
                </button>
            }
        </div>
    }
</form>
